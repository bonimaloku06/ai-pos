{
  "name": "pharmacy-pos",
  "version": "1.0.0",
  "private": true,
  "description": "Pharmacy POS & Smart Replenishment System",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:migrate": "pnpm --filter api-core db:migrate",
    "db:seed": "pnpm --filter api-core db:seed",
    "db:studio": "pnpm --filter api-core db:studio"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.6.3",
    "prettier": "^3.3.3",
    "@types/node": "^22.7.7"
  },
  "packageManager": "pnpm@9.12.1",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}